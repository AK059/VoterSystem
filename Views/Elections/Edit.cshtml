@model VoterSystem.Models.Election

@{
    ViewData["Title"] = "Edit";
}

<h1 style="padding-left:100px;">Edit</h1>

<h4 style="padding-left:100px;">Election</h4>
<hr />
<div class="row" style="padding-left:100px;">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
